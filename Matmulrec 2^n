int main(){
    printf("Enter order of matrices: ");
    int n;
    scanf("%d",&n);
    printf("Enter elements in first matrix:-\n");
    int** mat1 = matinitialise(n);
    matinp(mat1,n);
    printf("First matrix is:-\n");
    display(mat1,n);
    printf("Enter elements in second matrix:-\n");
    int** mat2 = matinitialise(n);
    matinp(mat2,n);
    printf("Second matrix is:-\n");
    display(mat2,n);
    int** mat3 = matadd(mat1,mat2,n);
    printf("Matrix sum of first and second matrix is:-\n");
    display(mat3,n);
    return 0;
}
