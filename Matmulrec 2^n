#include <stdio.h>
#include <stdlib.h>


int** matinitialise(int n){
    int i=0;
    int** mat1 = (int**)malloc(n*sizeof(int*));
    for(i=0;i<n;i++)
        *(mat1+i) = (int*)malloc(n*sizeof(int));
    return mat1;    
}

int** matadd(int** mat1, int** mat2, int n){
    int i=0,j=0;
    int** mat3 = matinitialise(n);
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            mat3[i][j] = mat1[i][j]+mat2[i][j];
    return mat3;        
}

void display(int** mat1, int n){
    int i=0,j=0;
    for(i=0;i<n;i++){
        for(j=0;j<n;j++)
            printf("%d\t",mat1[i][j]);
        printf("\n");    
    }
}

void matinp(int** mat1, int n){
    int i=0,j=0;
    for(i=0;i<n;i++)
        for(j=0;j<n;j++){
            printf("Enter element in (%d,%d) cell: ",i+1,j+1);
            scanf("%d",(*(mat1+i)+j));
        }
        
}

